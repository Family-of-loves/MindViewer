<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/section1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mindset Connection" />
        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/round_rect_shape"
	            android:orientation="vertical"
	            android:padding="8dp"
	            android:layout_marginTop="8dp"
	            android:layout_marginBottom="13dp" >

	            <Button
	                android:id="@+id/btn_mindset_conn"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="Connect to Mindset" />
	            
	        </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/section2_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Arduino Connection" />
	        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/round_rect_shape"
		            android:orientation="vertical"
		            android:padding="8dp"
		            android:layout_marginTop="8dp"
		            android:layout_marginBottom="13dp" >
		            
		            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Paired Device" />

		            <Spinner
		                android:id="@+id/spinner1"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginBottom="13dp"
		                 />
		            
		            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Link" />

		            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
		                <Button
			                android:id="@+id/btn_arduino_conn"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="Connect" />
			            <Button
			                android:id="@+id/btn_arduino_disconn"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="Disonnect" />
		            </LinearLayout>
		            
		            
		            
		    </LinearLayout>
    	</LinearLayout>
    	<TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff4444"
            android:textSize="11dp"
            android:text="** Warning : You must have connected Two BT devices (EEG Sensor and Arduino). If you didn't connect, can't execute this application."
        />
        
    </LinearLayout>
    
    
    
</ScrollView>
